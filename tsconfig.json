{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*(*.ts|*.tsx)", "./scripts/**/*(*.ts|*.tsx)", "./test/**/*(*.ts|*.tsx)"],
}
